<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0">
        <TextView
                android:text="Settings"
                android:layout_width="match_parent"
                android:layout_height="126dp" android:id="@+id/textView13"
                android:textColor="@android:color/black" android:fontFamily="@font/alice" android:textSize="24sp"
                android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Switch
                    android:text="Sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/soundSwitch" android:layout_weight="1"
                    android:textSize="18sp" android:fontFamily="@font/cantata_one" android:textAlignment="textStart"/>
        </LinearLayout>
        <Switch
                android:text="Notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Notificationswitch"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"/>
        <Switch
                android:text="Auto mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/autoModeSwitch"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Pet's name:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="1"
                    android:textSize="18sp" android:fontFamily="@font/cantata_one"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/penNameTextView" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="@android:color/black"
                    android:fontFamily="@font/cantata_one" android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Pet:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="@android:color/black"
                    android:fontFamily="@font/cantata_one"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/kindTextView" android:layout_weight="1"
                    android:textAlignment="textEnd" android:textSize="18sp" android:fontFamily="@font/cantata_one"
                    android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom">
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/hand" android:id="@+id/homeButton"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>